/* pages/feedback/index.wxss */
page {
  padding: 0;
  margin: 0;
  background-color: #eeeeee;
}
page .fb_main {
  padding: 20rpx;
  color: #666;
}
page .fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
page .fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
page .fb_main .fb_content {
  background-color: #ffffff;
  margin-top: 20rpx;
}
page .fb_main .fb_content textarea {
  padding: 10rpx;
}
page .fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: 90rpx;
}
page .fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 40rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
page .fb_main .from_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
page .fb_main .from_btn_wrap button {
  justify-content: center;
  display: flex;
  padding: 0;
  margin: 0;
  color: #fff;
  width: 25%;
  background-color: red;
}
page .fb_main .from_btn_wrap button icon {
  margin: 10rpx 0;
}
